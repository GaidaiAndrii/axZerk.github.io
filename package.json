{
  "name": "webpack-template",
  "version": "1.0.0",
  "description": "Webpack Project Template with basic setup and project structure",
  "main": "index.js",
  "scripts": {
    "start": "npm run build",
    "build": "rimraf  dist/ && webpack -d --display-error-details && xcopy \"src/index.html\" \"dist/\" /F /Y && webpack-dev-server --progress --watch",
    "build:prod": "webpack -p && xcopy \"src/index.html\" \"dist/\" /F /Y"
  },
  "author": "axZerk",
  "license": "ISC",
  "dependencies": {
    "handlebars": "^4.0.6",
    "handlebars-loader": "^1.4.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^2.0.0-rc.3",
    "file-loader": "^0.10.0",
    "html-loader": "^0.4.4",
    "node-sass": "^4.5.0",
    "postcss-loader": "^1.3.0",
    "resolve-url-loader": "^1.6.1",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.3.0"
  }
}
